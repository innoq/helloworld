<h1>World status feed</h1>

<div id="col-one">
  <%= form_for Status.new, :builder => Helloworld::FormBuilder, :class => 'status' do |f| %>
    <ul>

      <%= f.block :message do %>
        <%= f.label :message, "What do you want to share with the world?" %>
        <%= f.text_area :message, :placeholder => "Your message", :cols => 35, :rows => 3 %>
      <%- end -%>

      <%= f.block :submit do %>
        <%= f.submit "Publish" %>
      <%- end -%>

    </ul> 
  <%- end -%>
</div>
<!-- /col-one -->

<div id="col-two">
  <%- @statuses.each do |status| -%>
    <div class="status">
      <h3><%= link_to status.profile.full_name, profile_url(status.profile) %></h3>
      <span class="item-date"><%= l(status.created_at, :format => :long) %></span>
      <%= status.message %>
    </div>
  <%- end -%>

</div>
<!-- /col-two -->

<div id="col-three">

</div>
<!-- /col-three -->

<div class="clear"><!-- clear --></div>
